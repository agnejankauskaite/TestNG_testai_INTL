<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Tests">
	<test name="smoke">
		<groups>
			<run>
				<include name="smoke"/>
			</run>
		</groups>
		<packages>
			<package name= "loginPage"/>
			<package name= "testsAdminPages" />
			<package name= "testsParentPages" />
			<package name= "testsSpecialistPages" />
		</packages>
	</test>
	
	<test name="regression">
		<groups>
			<run>
				<include name="regression"/>
			</run>
		</groups>
		<packages>
			<package name= "loginPage"/>
			<package name= "testsAdminPages" />
			<package name= "testsParentPages" />
			<package name= "testsSpecialistPages" />
		</packages>
	</test>
	
</suite>